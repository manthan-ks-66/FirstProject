<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ExploreSphere</title>
</head>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link rel="stylesheet" type="text/css" href="/css/design.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- navbar -->
    <%- include("../includes/navbar.ejs") %> 
    <!-- All Listings -->

    <%- include("../includes/flash.ejs") %>

    <div class="filters mt-3 mb-1">
      <div class="filter">
          <a href="/trending">
          <div class="icon">
            <i class="fa-solid fa-fire"></i>
          </div>
          <p>Trending</p>
        </a>
      </div>
      <div class="filter">
          <a href="/rooms">
          <div class="icon">
            <i class="fa-solid fa-bed"></i>
          </div>
          <p>Rooms</p>
        </a>
      </div>
      <div class="filter">
          <a href="/mountains">
          <div class="icon">
            <i class="fa-solid fa-mountain-sun"></i>
          </div>
          <p>Mountains</p>
        </a>
      </div>
      <div class="filter">
          <a href="/hillstations">
          <div class="icon">
            <i class="fa-solid fa-mound"></i>
          </div>
          <p>Hill Stations</p>
        </a>
      </div>
      <div class="filter">
          <a href="/iconiccity">
          <div class="icon">
            <i class="fa-solid fa-tree-city"></i>
          </div>
          <p>Iconic City</p>
        </a>
      </div>
      <div class="filter">
          <a href="/camping">
          <div class="icon">
            <i class="fa-solid fa-campground"></i>
          </div>
          <p>Camping</p>
        </a>
      </div>
      <div class="filter">
          <a href="/farm-houses">
          <div class="icon">
            <i class="fa-solid fa-house-flag"></i>
          </div>
          <p>Farm House</p>
        </a>
      </div>
      <div class="filter">
          <a href="/castle">
          <div class="icon">
            <i class="fa-brands fa-fort-awesome"></i>
          </div>
          <p>Castles</p>
        </a>
      </div>
    </div>
    
    <div class="mt-3 container row row-cols-md-3 row-cols-sm-2 row-col-xs-1 listContainer">
      <% for(let listing of allListings) { %>
        <% if(listing.category === "iconic city") { %>
          <a href="/listings/<%= listing._id %>">
              <div class="card col listing-card">
                  <img src="<%= listing.image.url %>" class="card-img-top" alt="error" style="height: 20rem;">
                  <div class="card-img-overlay"></div>
                  <div class="card-body">
                  <b><p class="card-text"><%= listing.title %></b></p>
                  <p class="card-text">&#x20B9;<%= listing.price.toLocaleString("en-IN") %> / night</p>
                  </div>
              </div>
            </a>
        <% } %>
  <% } %>
  </div> 
    
    <!-- footer -->
    <%- include("../includes/footer.ejs") %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/ae404ffee0.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
